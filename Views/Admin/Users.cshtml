@model List<ApplicationUser>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users"></i> Quản lý người dùng</h1>
    <a asp-action="Dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Về Dashboard
    </a>
</div>

<!-- Users Table -->
<div class="card shadow-sm rounded-lg border-0" style="overflow-x: auto;">
    <div class="card-header bg-light border-bottom">
        <h5 class="mb-0">Danh sách người dùng (@(Model?.Count ?? 0))</h5>
    </div>
    <div class="card-body p-4">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Ngày sinh</th>
                            <th>Vai trò</th>
                            <th>Phụ huynh</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.OrderBy(u => u.UserName))
                        {
                            <tr>
                                <td>
                                    <strong>@user.UserName</strong>
                                </td>
                                <td>@user.FullName</td>
                                <td>
                                    <a href="mailto:@user.Email">@user.Email</a>
                                </td>
                                <td>
                                    @if (user.DateOfBirth.HasValue)
                                    {
                                        <span>@user.DateOfBirth.Value.ToString("dd/MM/yyyy")</span>
                                        <br><small class="text-muted">(@user.Age tuổi)</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var roles = new List<string>();
                                        // Note: In real implementation, you'd need to get user roles from UserManager
                                        // This is simplified for the view
                                    }
                                    <span class="black bg-primary">Người dùng</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.ParentId))
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-link"></i> Có phụ huynh
                                        </span>
                                    }
                                    else if (user.Children != null && user.Children.Any())
                                    {
                                        <span class="text-info">
                                            <i class="fas fa-users"></i> @user.Children.Count con
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Độc lập</span>
                                    }
                                </td>
                                <td>
                                    <small>@user.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">Xem
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">Sửa
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        @if (user.UserName != "admin")
                                        {
                                            <button class="btn btn-sm btn-outline-danger" title="Vô hiệu hóa"
                                                    onclick="return confirm('Bạn có chắc muốn vô hiệu hóa người dùng này?')">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có người dùng nào</h5>
                <p class="text-muted">Các người dùng sẽ hiển thị ở đây khi có người dùng đăng ký.</p>
            </div>
        }
    </div>
</div>

<!-- User Statistics -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card shadow-sm rounded-lg border-0" style="overflow-x: auto;">
            <div class="card-body text-center">
                <h4 class="text-primary">@((Model?.Count(u => !string.IsNullOrEmpty(u.ParentId)) ?? 0))</h4>
                <p class="mb-0">Học sinh</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm rounded-lg border-0" style="overflow-x: auto;">
            <div class="card-body text-center">
                <h4 class="text-success">@((Model?.Count(u => u.Children != null && u.Children.Any()) ?? 0))</h4>
                <p class="mb-0">Phụ huynh</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm rounded-lg border-0" style="overflow-x: auto;">
            <div class="card-body text-center">
                <h4 class="text-info">@((Model?.Count(u => u.CreatedAt >= DateTime.UtcNow.AddDays(-30)) ?? 0))</h4>
                <p class="mb-0">Mới (30 ngày)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm rounded-lg border-0" style="overflow-x: auto;">
            <div class="card-body text-center">
                <h4 class="text-warning">@((Model?.Count ?? 0))</h4>
                <p class="mb-0">Tổng cộng</p>
            </div>
        </div>
    </div>
</div>