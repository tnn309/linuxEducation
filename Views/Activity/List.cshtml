@model ActivityListViewModel
@{
    ViewData["Title"] = "Danh sách hoạt động";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
    <h2>Danh sách hoạt động</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn">Tạo hoạt động mới</a>
    }
</div>

<!-- Search and Filter -->
<div class="card" style="margin-bottom: 1.5rem;">
    <div class="form-group" style="margin-bottom: 0;">
        <input type="text" id="searchInput" placeholder="Tìm kiếm hoạt động..." value="@Model.SearchQuery" style="margin-bottom: 1rem;">
        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
            <select id="sortSelect" style="flex: 1; min-width: 150px;">
                <option value="newest" selected="@(Model.SortBy == "newest")">Mới nhất</option>
                <option value="oldest" selected="@(Model.SortBy == "oldest")">Cũ nhất</option>
                <option value="price_low" selected="@(Model.SortBy == "price_low")">Giá thấp</option>
                <option value="price_high" selected="@(Model.SortBy == "price_high")">Giá cao</option>
                <option value="popular" selected="@(Model.SortBy == "popular")">Phổ biến</option>
            </select>
            <button onclick="applyFilters()" class="btn">Lọc</button>
            <button onclick="resetFilters()" class="btn btn-secondary">Đặt lại</button>
        </div>
    </div>
</div>

@if (Model.Activities != null && Model.Activities.Any())
{
    <div class="activity-list">
        @foreach (var activity in Model.Activities)
        {
            <div class="activity-card">
                <h3><a asp-action="Details" asp-route-id="@activity.ActivityId">@activity.Title</a></h3>
                
                @if (activity.Type == "paid")
                {
                    <p><strong>Giá:</strong> @activity.Price.ToString("N0") VND</p>
                }
                else
                {
                    <p><strong>Giá:</strong> Miễn phí</p>
                }
                
                <p><strong>Thời gian:</strong> @activity.StartDate.ToString("dd/MM/yyyy") - @activity.EndDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Giờ học:</strong> @activity.StartTime.ToString(@"hh\:mm") - @activity.EndTime.ToString(@"hh\:mm")</p>
                <p><strong>Địa điểm:</strong> @activity.Location</p>
                <p><strong>Số chỗ:</strong> @activity.CurrentParticipants / @activity.MaxParticipants</p>
                
                @if (activity.Teacher != null)
                {
                    <p><strong>Giáo viên:</strong> @activity.Teacher.FullName</p>
                }
                
                <p>@(activity.Description.Length > 100 ? activity.Description.Substring(0, 100) + "..." : activity.Description)</p>
                
                <div style="margin-top: 1rem;">
                    <span class="badge @(activity.Type == "free" ? "bg-success" : "bg-warning")">
                        @(activity.Type == "free" ? "Miễn phí" : "Trả phí")
                    </span>
                    @if (activity.IsFull)
                    {
                        <span class="badge bg-danger">Đầy</span>
                    }
                    else if (!activity.IsActive)
                    {
                        <span class="badge bg-secondary">Đóng</span>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center" style="padding: 3rem 0;">
        <h3>Không tìm thấy hoạt động nào</h3>
        <p>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm.</p>
    </div>
}

@if (Model.TotalPages > 1)
{
    <div class="pagination">
        @if (Model.HasPreviousPage)
        {
            <a href="?page=@(Model.CurrentPage - 1)&filter=@Model.CurrentFilter&search=@Model.SearchQuery&sortBy=@Model.SortBy">« Trước</a>
        }
        
        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
        {
            <a href="?page=@i&filter=@Model.CurrentFilter&search=@Model.SearchQuery&sortBy=@Model.SortBy" 
               class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
        }
        
        @if (Model.HasNextPage)
        {
            <a href="?page=@(Model.CurrentPage + 1)&filter=@Model.CurrentFilter&search=@Model.SearchQuery&sortBy=@Model.SortBy">Sau »</a>
        }
    </div>
}

@section Scripts {
    <script>
        function applyFilters() {
            const search = document.getElementById('searchInput').value;
            const sort = document.getElementById('sortSelect').value;
            
            const url = new URL(window.location);
            url.searchParams.set('search', search);
            url.searchParams.set('sortBy', sort);
            url.searchParams.set('page', '1');
            
            window.location.href = url.toString();
        }
        
        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('sortSelect').value = 'newest';
            applyFilters();
        }
        
        document.getElementById('searchInput').addEventListener('keyup', function(e) {
            if (e.key === 'Enter') applyFilters();
        });
    </script>
}
